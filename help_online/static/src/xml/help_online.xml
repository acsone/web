<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <t t-name='help_online.Button' owl="1">
        <t t-if='url_info'>
            <a
                t-att-class="'fa fa-question-circle btn btn-icon o_help_online_button ' + (url_info.exists? '': 'o_help_online_not_found')"
                t-att-title='url_info.title'
                t-att-href='url_info.url'
                target='_blank'
            />
        </t>
    </t>

    <t t-inherit="web.ControlPanel" t-inherit-mode="extension" owl="1">
        <xpath expr="//nav[hasclass('o_cp_switch_buttons')]" position="after">
            <div class='hidden-xs btn-group btn-group-sm o_help_online_buttons' t-name="HelpOnline">
                <HelpOnline/>
            </div>
        </xpath>
    </t>

</templates>
